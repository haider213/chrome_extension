{
  "manifest_version": 3,
  "name": "Lecture Co-Pilot",
  "version": "1.0.0",
  "description": "Turn any webpage into objectives, outline, notes, quizzes â€” on-device with Chrome built-in AI.",
  "action": { "default_popup": "popup.html" },
  "background": { "service_worker": "service_worker.js" },
  "permissions": ["activeTab", "scripting", "storage", "offscreen"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "trial_tokens": [
    "PASTE_PROMPT_API_EXTENSION_TOKEN_IF_ANY",
    "PASTE_PROOFREADER_API_EXTENSION_TOKEN_IF_ANY"
  ]
}
